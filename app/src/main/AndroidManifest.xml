<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="exe.weazy.marvelapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".util.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.CharactersActivity"
            android:label="@string/characters"
            android:theme="@style/AppTheme.TransparentStatusBar"/>
        <activity
            android:name=".view.ComicsActivity"
            android:label="@string/comics"
            android:theme="@style/AppTheme.TransparentStatusBar"/>
        <activity
            android:name=".view.CreatorsActivity"
            android:label="@string/creators"
            android:theme="@style/AppTheme.TransparentStatusBar"/>
        <activity
            android:name=".view.EventsActivity"
            android:label="@string/events"
            android:theme="@style/AppTheme.TransparentStatusBar"/>
        <activity
            android:name=".view.SeriesActivity"
            android:label="@string/series"
            android:theme="@style/AppTheme.TransparentStatusBar"/>
        <activity
            android:name=".view.StoriesActivity"
            android:label="@string/stories"
            android:theme="@style/AppTheme.TransparentStatusBar"/>
    </application>

</manifest>